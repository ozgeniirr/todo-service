{
  "$schema": "https://json.schemastore.org/package",

  "name": "mail-service",

  "version": "1.0.0",

  "main": "index.js",

  "scripts": {

    "typeorm": "node -r ts-node/register -r tsconfig-paths/register -r dotenv/config ./node_modules/typeorm/cli.js",

    "migration:generate": "npm run typeorm -- migration:generate ./src/migrations/Init -d ./src/config/data-source.ts",

    "migration:run": "npm run typeorm -- migration:run -d ./src/config/data-source.ts",

    "migration:revert": "npm run typeorm -- migration:revert -d ./src/config/data-source.ts",

    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",

    "migration:show": "npm run typeorm -- migration:show -d ./src/config/data-source.ts",

    "worker:mail": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/workers/email.worker.ts",

    "test": "vitest run",

    "seed:admin": "ts-node -r tsconfig-paths/register -r dotenv/config src/scripts/seed-admin.ts"
  },

  "keywords": [],

  "author": "",

  "license": "ISC",

  "description": "",

  "dependencies": {

    "axios": "^1.11.0",

    "bcrypt": "^6.0.0",

    "bullmq": "^5.58.4",

    "class-transformer": "^0.5.1",

    "class-validator": "^0.14.2",

    "cluster": "^0.7.7",

    "compression": "^1.8.1",

    "connect-timeout": "^1.9.1",

    "cors": "^2.8.5",

    "dotenv": "^17.2.2",

    "express": "^5.1.0",

    "express-session": "^1.18.2",

    "helmet": "^8.1.0",

    "hpp": "^0.2.3",

    "http-status-codes": "^2.3.0",

    "i18n": "^0.15.1",

    "interface": "^1.2.1",

    "ioredis": "^5.7.0",

    "jsonwebtoken": "^8.5.1",

    "nodemailer": "^7.0.6",

    "nodemailer-otp": "^1.0.8",

    "passport": "^0.7.0",

    "passport-jwt": "^4.0.1",

    "passport-local": "^1.0.0",

    "pg": "^8.16.3",

    "redis": "^5.8.2",

    "socket.io": "^4.8.1",

    "typedi": "^0.10.0",

    "typeorm": "^0.3.26",

    "uuid": "^11.1.0",

    "winston": "^3.17.0"

  },

