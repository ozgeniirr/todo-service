    "@types/cors": "^2.8.19",

    "@types/express": "^5.0.3",

    "@types/express-session": "^1.18.2",

    "@types/hpp": "^0.2.6",

    "@types/http-status-codes": "^1.2.0",

    "@types/i18n": "^0.13.12",

    "@types/jsonwebtoken": "^8.5.9",

    "@types/mocha": "^10.0.10",

    "@types/node": "^24.4.0",

    "@types/nodemailer": "^7.0.1",

    "@types/passport-local": "^1.0.38",

    "@types/supertest": "^6.0.3",

    "@types/winston": "^2.4.4",

    "reflect-metadata": "^0.2.2",

    "socket.io-client": "^4.8.1",

    "supertest": "^7.1.4",

    "ts-node": "^10.9.2",

    "ts-node-dev": "^2.0.0",

